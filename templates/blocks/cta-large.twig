<div class="paragraph-widget paragraph-widget--call-to-action--large">
	<div class="call-to-action call-to-action--large">
		<div class="call-to-action__media">
			<img src="{{ fields.callout_image.url }}" alt="{{ fields.callout_image.alt }}" width="{{ fields.callout_image.width }}" height="{{ fields.callout_image.height }}"/>
		</div>
		<div class="call-to-action__copy-wrap">
			<h2 class="call-to-action__headline">{{ fields.callout_content.title|striptags }}</h2>
			<div class="text-content">{{ fields.callout_content.content }}</div>
			<div class="iastate22-button-set">
				<ul>
					<li><a class="iastate22-button"href="{{ fields.callout_content.link_url }}">{{ fields.callout_content.label }}<span class="arrow"></span></a></li>
				</ul>
			</div>
		</div>
	</div>
</div>
