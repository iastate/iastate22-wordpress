<div class="paragraph-widget paragraph-widget--video-embed">
	<div class="video-embed">
		<div class="video-embed__media-wrap">
			{% if fields.video.video.poster_image.url %}
				<img src="{{ fields.video.video.poster_image.url|striptags }}" alt="{{ fields.video.video.poster_image.alt|striptags }}" width="{{ fields.video.video.poster_image.width|striptags }}" height="{{ fields.video.video.poster_image.height|striptags }}"/>
			{% else %}
				{% if fields.video.video.source == "youtube" %}
					<img src="https://img.youtube.com/vi/{{ fields.video.video.youtube_video_id|striptags }}/maxresdefault.jpg" alt="Video Poster">
				{% elseif fields.video.video.source == "vimeo" %}
					<img src="https://vumbnail.com/{{ fields.video.video.vimeo_video_id|striptags }}.jpg" alt="Video Poster">
				{% endif %}
			{% endif %}
			{% if fields.video.video.source == "youtube" %}
				<div class="video-embed__video" aria-label="YouTube Video: {{ fields.video.video.title|striptags }}" data-vid="{{ fields.video.video.youtube_video_id|striptags }}"></div>
			{% elseif fields.video.video.source == "vimeo" %}
				<div data-vimeo-id="{{ fields.video.video.vimeo_video_id|striptags }}" class="video--vim"></div>
			{% endif %}
		</div>
		{% if fields.media_caption_toggle == true %}
			<div class="video-embed__caption">{{ fields.media_caption }}</div>
		{% endif %}
	</div>
</div>
