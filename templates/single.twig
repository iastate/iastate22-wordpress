{% extends "base.twig" %}

{% block content %}
	<div class="outer-pad">
		<p class="iastate-article__back-btn"><a href="#">All Articles</a></p>
		<div class="hero--news-article text-content">
			<h1 class="hero--news-article__headline">{{ post.title }}</h1>
			{% if post.excerpt %}
				<h2 class="hero--news-article__subhead">{{ post.excerpt }}</h2>
			{% endif %}
			<div class="hero--news-article__attribution"><p><strong>Author: {{ post.author.name }}</strong> | Image: {{ post.author.name }}</p></div>
			{% if post.meta("use_featured_image_as_hero") == "false" %}
			{% if post.hero_image %}
				<div class="hero--news-article__media">
					<img src="{{ Image(post.hero_image).src|resize(2000, 500) }}" alt="{{ Image(post.hero_image).alt }}">
				</div>
				{% endif %}
			{% else %}
				<div class="hero--news-article__media">
					<img src="{{ post.thumbnail.src|resize(2000, 500) }}">
				</div>
			{% endif %}
		</div>
		{% include "partial/share.twig" %}
		{{post.content}}

		<div class="paragraph-widget paragraph-widget--article-category-tags">
			{% include ['templates/partial/post-category-tag.twig'] %}
		</div>
	</div><!-- /outer pad -->
{% endblock %}
