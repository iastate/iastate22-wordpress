{% block card_default %}
  <div class="iastate22-card clickable">
    {% if card.card.image -%}
      <div class="iastate22-card__media">
        <img src="{{ card.card.image.url|e('esc_url') }}"
             alt="{{ card.card.image.alt|e('esc_attr') }}"
             width="{{ card.card.image.width|e('esc_attr') }}"
             height="{{ card.card.image.height|e('esc_attr') }}">
      </div>
    {%- endif %}
    <div class="iastate22-card__content">
      {% if card.card.title -%}
        <h2 class="iastate22-card__title">
          <a href="{{ card.card.card_link.url|e('esc_url') }}"{% if card.card.card_link.target == "_blank" %} target="_blank"{% endif %}>{{ card.card.title }}</a>
        </h2>
      {%- endif %}
      <div class="iastate22-card__body text-content">
        {{ card.card.content }}
      </div>
      {% if card.card.card_link.url and card.card.card_link.title -%}
        <a href="{{ card.card.card_link.url|e('esc_url') }}"
           class="iastate22-card__cta"{% if card.card.card_link.target == "_blank" %} target="_blank"{% endif %}>
          {{- card.card.card_link.title -}}
        </a>
      {%- endif %}
    </div>
  </div>
{% endblock card_default %}

{% block card_linked_image %}
  <div class="iastate22-card iastate22-card--linked-image">
    {% if card.card.image %}
      <div class="iastate22-card__media">
        <img src="{{ card.card.image.url|e('esc_url') }}" alt="{{ card.card.image.alt|e('esc_attr') }}">
      </div>
    {% endif %}
    {% if card.card.card_link.url and card.card.card_link.title %}
      <a class="iastate22-card__cta" href="{{ card.card.card_link.url|e('esc_url') }}"
          {%- if card.card.card_link.target == "_blank" %} target="_blank"{% endif -%}>
        {{- card.card.card_link.title }}
        <span class="arrow"></span>
      </a>
    {% endif %}
  </div>
{% endblock card_linked_image %}

{% block card_profile_with_modal %}
  {% set modal = card.card.card_modal %}
  <div
      class="iastate22-card iastate22-card--profile-with-modal" {% if clickable is defined %} data-clickable="{{ clickable|e('esc_attr') }}" {% endif %}>
    {% if card.card.image %}
      <div class="iastate22-card__media">
        <img src="{{ card.card.image.url|e('esc_url') }}" loading="lazy" width="600" height="600"
             alt="{{ card.card.image.alt|e('esc_attr') }}">
      </div>
    {% endif %}
    <div class="iastate22-card__content">
      {% if card.card.title %}
        <h2 class="iastate22-card__title">{{ card.card.title }}</h2>
      {% endif %}
      {% if card.card.name %}
        <div class="iastate22-card__name">
          <p>{{ card.card.name }}</p>
        </div>
      {% endif %}
      <div class="iastate22-card__role">
        <p>{{ card.card.role }}</p>
      </div>
      {% set modalID = function('wp_unique_id', 'profile-modal-') %}
      <button class="iastate22-card__cta" data-micromodal-trigger="{{ modalID|e('esc_attr') }}">
        {{ card.card.modal_cta }}
      </button>
    </div>
  </div>
  <div class="iastate22-modal iastate22-card--profile-with-modal" id="{{ modalID|e('esc_attr') }}" aria-hidden="false">
    <div class="iastate22-modal__overlay" tabindex="-1" data-micromodal-close>
      <div id="{{ modalID }}-content" role="dialog" aria-modal="true" aria-labelledby="{{ modalID }}-title"
          class="iastate22-modal__container{% if modal.modal_image.url|length > 0 %} iastate22-modal__container-with-media"{% endif %}>
        <button class="iastate22-modal__close" aria-label="Close modal" data-micromodal-close>
          <i class="fa-light fa-xmark" aria-hidden="true"></i>
        </button>
        {% if modal.modal_image.url|length > 0 %}
          <div class="iastate22-modal__media-name-wrap">
            <div class="iastate22-modal__media">
              <img src="{{ modal.modal_image.url|e('esc_url') }}" alt="{{ modal.modal_image.alt|e('esc_attr') }}"
                   loading="lazy" width="207" height="197">
            </div>
            <div class="iastate22-modal__name-role-wrap">
              <div class="iastate22-card__name">
                <p>{{ card.card.name }}</p>
              </div>
              {% if card.card.role %}
                <div class="iastate22-card__role">
                  <p>{{ card.card.role }}</p>
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
        <div class="iastate22-modal__content">
          <h2 class="iastate22-modal__title" id="{{ modalID }}-title">{{ card.card.title }}</h2>
          <div class="iastate22-modal__body-content text-content">{{ modal.modal_content|raw }}</div>
          <div class="iastate22-modal__content-cta">
            <p>{{ modal.modal_cta.cta_intro }}</p>
            {% if modal.modal_cta.link.url and modal.modal_cta.link.title %}
              <a href="{{ modal.modal_cta.link.url|e('esc_url') }}"{% if modal.modal_cta.link.target == "_blank" %} target="_blank"{% endif %}>
                {{- modal.modal_cta.link.title -}}
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock card_profile_with_modal %}

