            <div class="iastate22-modal__media">
              <div class="video-embed">
                <div class="video-embed__media-wrap">
                  <video class="video-embed__video">
                    <source src="{{ video.local_file.url|e('esc_url') }}">
                  </video>
                </div>
                <div class="video-embed__caption">
                  {{ video.caption }}
                </div>
              </div>
            </div>
          </div>
        {% endif -%}
        <div class="iastate22-modal__content">
          <h2 class="iastate22-modal__title" id="{{ modalID }}-title">{{ video.title }}</h2>
          <div class="iastate22-modal__body-content text-content">{{ modal.modal_content|raw }}</div>
        </div>
      </div>
    </div>
  </div>
{% endblock card_video %}
