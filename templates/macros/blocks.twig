{% macro announcement(content, icon = 'info', type = 'home') -%}
  {% set banner_class = type == 'home' ? 'home-announcement' : 'home-announcement--banner' %}
  <div class="{{ banner_class }}">
    {%- if icon == 'info' -%}
      <span class="fak fa-iastate22-info-box" aria-hidden="true"></span>
    {%- elseif icon == 'alert' -%}
      <span class="fak fa-iastate22-exclamation-point" aria-hidden="true"></span>
    {%- endif -%}
    <div class="home-announcement__text">{{ content|e('wp_kses_post') }}</div>
  </div>
{%- endmacro announcement %}