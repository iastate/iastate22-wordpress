<div class="paragraph-widget paragraph-widget--article-category-tags">
	{% if post.terms('category')|length > 0 %}
		<h4 class="category-title">Categories</h4>
		<ul class="category-tags">
			{% for term in post.terms('category') %}
				<li>
					<a href="{{ term.link|e('esc_url') }}">{{ term.name }}</a>
				</li>
			{% endfor %}
		</ul>
	{% endif %}
	{% if post.terms('tags')|length > 0 %}
		<h4 class="category-title">Tags</h4>
		<ul class="category-tags">
			{% for term in post.terms('tags') %}
				<li>
					<a href="{{ term.link|e('esc_url') }}">{{ term.name }}</a>
				</li>
			{% endfor %}
		</ul>
	{% endif %}
</div>
