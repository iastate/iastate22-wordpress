<div class="paragraph-widget paragraph-widget--news-items">
    <div class="text-content">
        <h2>{{ fields.in_the_news_title}}</h2>
    </div>
    <div class="news-items">
        {% for item in fields.news_cards %}
        <div class="news-item">
            <div class="news-item">
                <div class="news-item__tags">
                    <ul>
                        {% if item.news_tags|length > 0 %}
                            {% for tag in item.news_tags %}    
                                <li>{{ tag.tag }}</li>
                            {% endfor %}
                        {% endif %}
                    </ul>
                </div>
                <div class="news-item__article-title">
                    {% if item.news_story_link.target|length > 0 %}
                        {% set classlist = 'link-set__link iastate22-link-external' %}
                    {% else %}
                        {% set classlist = 'link-set__link' %}
                    {% endif %}
                    <a href="{{ item.news_story_link.url }}" class="{{ classlist }}"{% if item.news_story_link.target|length > 0 %} target="_blank"{% endif %}>{{ item.news_story_link.title }}<span class="arrow"></span></a>
                </div>
                {% if item.news_story_excerpt %}
                    <p class="news-item__article-excerpt">{{ item.news_story_excerpt }}</p>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
</div>