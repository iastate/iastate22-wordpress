{% extends "@page" %}

{% block header %}
  {% include "@site-header--ecosystem" %}
{% endblock %}

{% block content %}
  <div class="outer-pad">
    <p class="iastate-article__back-btn"><a href="#">View All Events</a></p>
    {% include "@hero--event-details" with hero %}
    <div class="paragraph-widget paragraph-widget--event-details">
      <div class="event-details">
        <dl class="event-details__wrap">
          {% for detail in event_details %}
            <dt>
              {% if detail.icon|length > 0 %}
                <span class="icon">{{ detail.icon }}</span>
              {% else %}
              {% endif %}
              <span class="visible-for-screen-readers">{{ detail.title }}</span>
            </dt>
            <dd>
              {% if detail.contact %}
                {% for contact in detail.contact %}  
                  {% if contact.email %}
                    <a href="mailto:{{contact.email.address}}" class="link-set__link iastate22-link-secondary">{{contact.email.label}}<span class="arrow"></span></a>
                  {% elseif contact.link %}
                    <a href="{{contact.link.url}}" class="link-set__link iastate22-link-external">{{contact.link.label}}<span class="arrow"></span></a>
                  {% elseif contact.phone %}
                    <span class="event-details__phone-number">{{contact.phone}}</span>
                  {% elseif contact.tags %}
                    <div class="event-details__tags">
                      {% for tag in contact.tags %}
                        <a href="{{tag.url}}">{{tag.label}}</a>
                      {% endfor %}
                    </div>
                  {% endif %}
                {% endfor %}
              {% else %}
                <p>{{ detail.content }}<p>
              {% endif %}
            </dd>
          {% endfor %}
        </dl>
      </div>
      <div class="paragraph-widget paragraph-widget--text-content">
        <div class="text-content">
          <p><a href="#">Download iCal/vCal</a> | <a href="#">Email Reminder</a></p>
