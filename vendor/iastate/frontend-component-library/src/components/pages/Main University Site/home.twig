  <div class="home-ctas__headline-button-wrap">
    <div class="home-ctas__headline-wrap"><h2 class="home-ctas__headline">{{ ctas.headline }}</h2></div>
    {% include "@button-set" with ctas.button_set %}
  </div>
  <div class="home-ctas__image">
    <img src="{{ ctas.images.one|path }}" alt="" width="378" height="236" loading="lazy">
  </div>
  <div class="home-ctas__image">
    <img src="{{ ctas.images.two|path }}" alt="" width="378" height="274" loading="lazy">
  </div>
</div>

<div class="home-full-width-campus-photo">
    <img class="home-full-width-campus-photo__mobile" src="{{ campus_photo.image_mobile|path }}" alt="" loading="lazy" width="633" height="290">
    <img class="home-full-width-campus-photo__desktop" src="{{ campus_photo.image_desktop|path }}" alt="" loading="lazy" width="1600" height="733">
