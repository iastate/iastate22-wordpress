<div class="home-resources">
  <h2 class="home-resources__headline">{{ resources.headline }}</h2>
  <div class="home-resources__subhead-link-wrap">
    <div class="home-resources__subhead-wrap"><h3 class="home-resources__subhead">{{ resources.subhead }}</h3></div>
