{% extends "@page" %}

{% block content %}
<script>
  document.body.classList.add("a-z-index");
</script>

<div class="outer-pad">
  <div class="red-bkgrnd-hero">
    <div class="red-bkgrnd-hero__breadcrumbs">
    {% include "@breadcrumb--top-level-pages" with hero.breadcrumbs %}
    </div>
    <h1 class="red-bkgrnd-hero__title">{{ hero.title }}</h1>
    <div class="red-bkgrnd-hero__message">{{ hero.message|raw }}</div>
  </div>

  <div class="a-z-index-letter-list">
    <ul>
      {% for letter in letter_list %}
      <li>
        {% if letter.url %}
        <a {% if letter.current_page == true  %}class="a-z-index-letter-list__active"{% endif %} href="{{ letter.url }}">{{ letter.letter }}</a>
        {% else %}
        <span>{{ letter.letter }}</span>
        {% endif %}
      </li>
      {% endfor %}
    </ul>
  </div>

  <div class="a-z-index-entry-list">
    <h2 class="a-z-index-entry-list__letter">{{ entry_list.letter }}</h2>
    <ul>
      {% for entry in entry_list.list %}
      <li>
        <a href="{{ entry.url }}" class="iastate22-link-secondary">{{ entry.title }}<span class="arrow"></span></a>
      </li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endblock %}